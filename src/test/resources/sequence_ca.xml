<?xml version="1.0" encoding="UTF-8"?>
<Procedure xmlns="http://codac.iter.org/sup/sequencer" version="1.0"
           name="Trivial procedure for testing purposes"
           xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
           xs:schemaLocation="http://codac.iter.org/sup/sequencer sequencer.xsd">
    <Sequence>
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:BOOL"
            datatype='{"type":"string"}'
            instance='"TRUE"'/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:BOOL"
            variable="boolean"/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:BOOL"
            variable="uint32"/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:BOOL"
            variable="string"/>
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:FLOAT"
            datatype='{"type":"string"}'
            instance='"0.5"'/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:FLOAT"
            variable="float32"/>
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:STRING"
            datatype='{"type":"string"}'
            instance='"{value:0}"'/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:STRING"
            variable="string"/>
        <!-- Read/Write workspace variable -->
        <BlockingCAWriteNode name="put-client"
            channel="SEQ-TEST:FLOAT"
            variable="to-write"/>
        <BlockingCAFetchNode name="get-client"
            channel="SEQ-TEST:FLOAT"
            variable="to-fetch"/>
    </Sequence>
    <Workspace>
        <Local name="boolean"
               type='{"type":"bool"}'
               value="false"/>
        <Local name="uint32"
               type='{"type":"uint32"}'
               value="0"/>
        <Local name="float32"
               type='{"type":"float32"}'
               value="0.0"/>
        <Local name="string"
               type='{"type":"string"}'
               value='"undefined"'/>
        <Local name="to-write"
               type='{"type":"float32"}'
               value="-1.1"/>
        <Local name="to-fetch"
               type='{"type":"float32"}'
               value="0.0"/>
    </Workspace>
</Procedure>
