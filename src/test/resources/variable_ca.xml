<?xml version="1.0" encoding="UTF-8"?>
<Procedure xmlns="http://codac.iter.org/sup/sequencer" version="1.0"
           name="Trivial procedure for testing purposes"
           xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
           xs:schemaLocation="http://codac.iter.org/sup/sequencer sequencer.xsd">
    <Plugin name="libsequencer-ca.so"/>
    <Sequence>
        <LogTrace level="info" message="Step 1 - Start softioc"/>
        <Fallback>
            <Sequence>
                <SystemCall name="softioc"
                    command='/usr/bin/find ../resources/ChannelAccessClient.db &amp;&gt; /dev/null'/>
                <SystemCall name="softioc"
                    command='/usr/bin/screen -d -m -S cavariabletestIOC /usr/bin/softIoc -d ../resources/ChannelAccessClient.db &amp;&gt; /dev/null'/>
            </Sequence>
            <Sequence>
                <SystemCall name="softioc"
                    command='/usr/bin/find ./target/test/resources/ChannelAccessClient.db &amp;&gt; /dev/null'/>
                <SystemCall name="softioc"
                    command='/usr/bin/screen -d -m -S cavariabletestIOC /usr/bin/softIoc -d ./target/test/resources/ChannelAccessClient.db &amp;&gt; /dev/null'/>
            </Sequence>
        </Fallback>
        <LogTrace level="info" message="Step 2 - Wait for some time"/>
        <Wait timeout="1.0"/>
        <SystemCall name="ca-put"
            command='/usr/bin/caput -a SEQ-TEST:UIARRAY 8 0 1 2 3 4 5 6 7'/>
        <Wait timeout="1.0"/>
        <LogTrace level="info" message="Step 3 - Read variables"/>
        <LogTrace level="info" input="boolean"/>
        <LogTrace level="info" input="string"/>
        <LogTrace level="info" input="uint32-array"/>
        <LogTrace level="info" input="float32"/>
        <LogTrace level="info" message="Step 4 - Kill softioc"/>
        <SystemCall name="kill"
            command='/usr/bin/screen -S cavariabletestIOC -X quit &amp;&gt; /dev/null'/>
        <LogTrace level="info" message="Step 5 - Terminate"/>
    </Sequence>
    <Workspace>
        <ChannelAccessVariable name="boolean"
            channel='SEQ-TEST:BOOL'
            period='10000000'
            datatype='{"type":"bool"}'/>
        <ChannelAccessVariable name="string"
            channel='SEQ-TEST:STRING'
            datatype='{"type":"string"}'/>
        <ChannelAccessVariable name="uint32-array"
            channel='SEQ-TEST:UIARRAY'
            datatype='{"type":"uint32[]","multiplicity":8,"element":{"type":"uint32"}}'/>
        <ChannelAccessVariable name="float32"
            channel='SEQ-TEST:FLOAT'
            datatype='{"type":"float32"}'/>
    </Workspace>
</Procedure>
